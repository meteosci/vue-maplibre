{
  "name": "vue-maplibre",
  "packageManager": "pnpm@9.0.4",
  "type": "module",
  "workspaces": [
    "packages/*",
    "play",
    "docs",
    "internal/*",
    "demo"
  ],
  "description": "A Vue 3 Component Library for maplibre-gl",
  "scripts": {
    "cz": "czg",
    "test": "jest --coverage && coveralls < coverage/lcov.info",
    "gen": "bash ./scripts/gc.sh",
    "gen:version": "tsx internal/build/gen-version.ts",
    "update:version": "tsx internal/build/update-version.ts",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "build": "pnpm run -C internal/build start",
    "build:theme": "pnpm run -C packages/theme-default build",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "docs:dev": "pnpm run -C docs dev",
    "docs:build": "pnpm run -C docs build",
    "docs:serve": "pnpm run -C docs serve",
    "stub": "pnpm run -r --parallel stub",
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm -y",
    "postinstall": "pnpm stub && concurrently \"pnpm gen:version\" \"pnpm run -C internal/metadata dev\""
  },
  "license": "MIT",
  "homepage": "https://vue-maplibre.meteosci.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/meteosci/vue-maplibre.git"
  },
  "bugs": {
    "url": "https://github.com/meteosci/vue-maplibre/issues"
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "dependencies": {
    "@meteosci/vue-maplibre": "workspace:*",
    "@vue-maplibre/components": "workspace:*",
    "@vue-maplibre/composables": "workspace:*",
    "@vue-maplibre/demo": "workspace:*",
    "@vue-maplibre/directives": "workspace:*",
    "@vue-maplibre/docs": "workspace:*",
    "@vue-maplibre/locale": "workspace:*",
    "@vue-maplibre/shared": "workspace:*",
    "@vue-maplibre/theme-default": "workspace:*",
    "@vue-maplibre/utils": "workspace:*",
    "gl-matrix": "^3.4.4",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lodash-unified": "^1.0.3",
    "maplibre-gl": "^5.14.0",
    "mitt": "^3.0.1",
    "three": "^0.181.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.5.1",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@pnpm/find-workspace-packages": "^6.0.9",
    "@pnpm/logger": "^1001.0.1",
    "@pnpm/types": "^1001.1.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/gulp": "^4.0.18",
    "@types/gulp-debug": "^2.0.36",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/lodash": "^4.17.21",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "~24.10.2",
    "@types/three": "^0.181.0",
    "@types/undertaker": "^1.2.12",
    "@vitejs/plugin-vue": "5.2.4",
    "@vitejs/plugin-vue-jsx": "4.2.0",
    "@vue-maplibre/build": "workspace:*",
    "@vue/compiler-sfc": "^3.5.25",
    "algoliasearch": "^5.46.0",
    "chalk": "^5.6.2",
    "commitizen": "^4.3.1",
    "components-helper": "^2.2.0",
    "concurrently": "^9.2.1",
    "consola": "^3.4.2",
    "cz-git": "^1.12.0",
    "czg": "^1.12.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.1.0",
    "eslint-plugin-yaml": "^1.1.3",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.2",
    "globals": "^16.5.0",
    "gulp": "^5.0.1",
    "gulp-cli": "^3.1.0",
    "gulp-debug": "^5.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "rollup-plugin-css-only": "^4.5.5",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-filesize": "^10.0.0",
    "transliteration": "^2.3.5",
    "ts-jest": "^29.4.6",
    "ts-morph": "^27.0.2",
    "tsx": "^4.21.0",
    "type-fest": "^5.3.1",
    "typescript": "^5.9.3",
    "unplugin-vue-macros": "^2.14.5",
    "vitest": "^4.0.15",
    "vue": "^3.5.25",
    "vue-jest": "5.0.0-alpha.10",
    "vue-tsc": "^3.1.8"
  }
}
