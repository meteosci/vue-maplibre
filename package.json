{
  "name": "vue-maplibre",
  "packageManager": "pnpm@6.30.1",
  "workspaces": [
    "packages/*",
    "play",
    "docs"
  ],
  "description": "A Vue 3 Component Library for maplibre-gl",
  "scripts": {
    "cz": "czg",
    "test": "jest --coverage && coveralls < coverage/lcov.info",
    "gen": "bash ./scripts/gc.sh",
    "gen:version": "sucrase-node scripts/gen-version.ts",
    "update:version": "sucrase-node scripts/update-version.ts",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "build": "gulp --require sucrase/register/ts -f build/gulpfile.ts",
    "build:theme": "pnpm run build -C packages/theme-default",
    "build:indices": "sucrase-node build/indices.ts",
    "format": "prettier --write .",
    "lint": "eslint ./packages --ext .vue,.js,.ts,.jsx,.tsx --max-warnings 0 --cache",
    "lint:fix": "pnpm run lint --fix",
    "website-build": "rimraf website-dist && cross-env NODE_ENV=production webpack --config ./website/webpack.config.js",
    "website-dev": "webpack-dev-server --config ./website/webpack.config.js",
    "upgrade:vue": "bash ./scripts/update-versions.sh",
    "prepare": "husky install",
    "postinstall": "pnpm gen:version",
    "preinstall": "npx only-allow pnpm -y"
  },
  "license": "MIT",
  "homepage": "https://meteosci.com/vue-maplibre",
  "repository": {
    "type": "git",
    "url": "git://github.com/meteosci/vue-maplibre.git"
  },
  "bugs": {
    "url": "https://github.com/meteosci/vue-maplibre/issues"
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@vue-maplibre/components": "workspace:*",
    "@vue-maplibre/composables": "workspace:*",
    "@vue-maplibre/directives": "workspace:*",
    "@vue-maplibre/locale": "workspace:*",
    "@vue-maplibre/shared": "workspace:*",
    "@vue-maplibre/theme-default": "workspace:*",
    "@vue-maplibre/utils": "workspace:*",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lodash-unified": "^1.0.3",
    "maplibre-gl": "^3.6.1",
    "mitt": "^3.0.1",
    "vue-maplibre": "workspace:*"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@pnpm/find-workspace-packages": "6.0.9",
    "@pnpm/logger": "^5.0.0",
    "@pnpm/types": "^9.4.2",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "5.0.5",
    "@sucrase/jest-plugin": "3.0.0",
    "@types/fs-extra": "9.0.13",
    "@types/gulp": "^4.0.17",
    "@types/gulp-debug": "^2.0.36",
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.6",
    "@types/lodash": "^4.14.202",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.7",
    "@types/undertaker": "^1.2.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vue/compiler-sfc": "^3.4.7",
    "chalk": "4.1.2",
    "commitizen": "^4.3.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-git": "^1.8.0",
    "czg": "^1.8.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-vue": "^9.19.2",
    "fast-glob": "3.3.2",
    "fs-extra": "10.0.0",
    "gulp": "^4.0.2",
    "gulp-debug": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "prettier-eslint": "^16.2.0",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.4",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-esbuild": "^6.1.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-vue": "^6.0.0",
    "sucrase": "^3.35.0",
    "ts-jest": "^29.1.1",
    "ts-morph": "^21.0.1",
    "type-fest": "^4.9.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3",
    "vue": "^3.4.7",
    "vue-tsc": "^1.8.27"
  },
  "engines": {
    "node": ">= 16"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react",
        "react-dom"
      ]
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
